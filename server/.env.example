# Server Configuration
PORT=5000

# Database
DATABASE_URL="file:./dev.db"

# JWT Authentication - THAY ĐỔI NGAY CHO PRODUCTION!
# Tạo JWT_SECRET bằng: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secret_key_change_this_in_production_12345

# Google Generative AI (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Hugging Face (Backup)
HF_ACCESS_TOKEN=your_hugging_face_token_here

# Groq (Fallback AI)
GROQ_API_KEY=your_groq_api_key_here

# Cloudinary (Avatar Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (SMTP - Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM="AI Personal Brain <your_gmail@gmail.com>"

# Frontend base URL (for verification link)
APP_BASE_URL=http://localhost:5173

# Notes:
# - Tất cả các KEY phải được thay thế bằng giá trị thực từ các service
